import queryFragment from "../../graphql/fragments/gear-block";
import sectionFragment from "../../graphql/fragments/section-info";

<!-- @todo likely should change the name of this component -->
$ const queryParams = {
  requiresImage: true,
  ...input.params,
  sectionAlias: input.alias,
  limit: 6,
  queryFragment,
  sectionFragment,
};

$ const blockName = "more-gear";

<marko-web-query|{ nodes, section }| name="website-scheduled-content" params=queryParams>
  <marko-web-block name=blockName>
    <marko-web-element block-name=blockName name="header-wrapper">
      <marko-web-element block-name=blockName name="header">
        More ${section.name}
      </marko-web-element>
      <marko-web-element block-name=blockName name="view-more">
        <marko-web-link href=section.canonicalPath>
          View more &raquo;
        </marko-web-link>
      </marko-web-element>
    </marko-web-element>
    <default-theme-card-deck-flow
      cols=2
      nodes=nodes
      modifiers=[blockName]
    >
      <@slot|{ node }|>
        <global-content-node
          image-position="right"
          card=true
          flush=false
          modifiers=[blockName]
          node=node
          with-teaser=false
          with-dates=false
        >
          <@image width=112 ar="1:1" />
        </global-content-node>
      </@slot>
    </default-theme-card-deck-flow>
  </marko-web-block>
</marko-web-query>
